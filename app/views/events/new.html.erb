<!DOCTYPE html>
<html>
<head>
      <title></title>
</head>
<body>

       <style>
      body {background-color: #ff9999;}
  </style>

<%= form_tag url_for(action: 'create'), method: "post" do %>

     
      <center><%= label_tag 'start_date' %></center>
      <center><%= date_field 'start_date', @event.start_date %></center>
      <br /> <br />

      <center><%= label_tag 'duration' %></center>
      <center><%= text_field 'duration', @event.duration %></center>
      <br /> <br />


      <center><%= label_tag 'title' %></center>
      <center><%= text_field 'title', @event.title %></center>
      <br /> <br />



      <center><%= label_tag 'description' %></center>
      <center><%= text_area_tag 'description', @event.description %></center>
      <br /> <br />


      <center><%= label_tag 'price' %></center>
      <center><%= text_field 'price', @event.price %></center>
      <br /> <br />

      <center><%= label_tag 'location' %></center>
      <center><%= text_field'location', @event.location %></center>
      <br /> <br />

 <center><%= submit_tag "Create Event" %></center>

    <% end %>

</body>
</html>
