<!DOCTYPE html>
<html>
<head>
      <title></title>
</head>
<body>

       <style>
      body {background-color: #ff9999;}
  </style>

<%= form_tag url_for(action: 'create'), method: "post" do %>

     
      <%= label_tag 'start_date' %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= date_field 'start_date', @event.start_date %>
      <br /> <br />

      <%= label_tag 'duration' %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= text_field 'duration', @event.duration %>
      <br /> <br />


      <%= label_tag 'title' %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= text_field 'title', @event.title %>
      <br /> <br />



      <%= label_tag 'description' %>
      <%= text_area_tag 'description', @event.description %>
      <br /> <br />


      <%= label_tag 'price' %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= text_field 'price', @event.price %>
      <br /> <br />

      <%= label_tag 'location' %>&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= text_field'location', @event.location %>
      <br /> <br />

     &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <%= submit_tag "Create Event" %>

    <% end %>

</body>
</html>
