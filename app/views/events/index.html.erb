 <!DOCTYPE html>
 <html>
 <head>
 	<title></title>
 </head>
 <body>
  <style>
  	body {background-color: #ff9999;}
  </style>
<% @events.each do |event|%>

<div class="jumbotron">
  <h1 class="display-4">💫 ⭐️ 🌟 ✨<%=event.title%>! 🌟 ✨</h1>
  <p class="lead", style="text-align:center"> <%=event.start_date%></p>
  <hr class="my-4">
  <p  style="text-align:center"> <%=event.description%></p>
  <p style="text-align:center">Prix: <%=event.price%> €</p>
   <p style="text-align:center">Durée: <%=event.duration%> mn</p>
    <p style="text-align:center">Lieu: <%=event.location%> </p>
     <% if user_signed_in? %>
     <p style="text-align:center"> Réalisateur: <%=event.admin.first_name%> </p>
  
    
    <center><a class="btn btn-primary btn-lg",role="button" <%=link_to "Participer",new_event_attendance_path(event.id) , :data => {method: :create} %> </a> </center>

    <%else%>
     
    <p style="text-align:center"> Pour participer inscrivez-vous <%=link_to "ici",new_user_registration_path%> </p>
    
    <%end%>
    
  </p>
</div>
<%end%>

 
               
 </body>
 </html>
     
                    